
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Layout/_register.cshtml";
}

<h2>Register</h2>
<div class="row">
    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
    <div class="col-lg-7">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
            </div>
            
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" id="Uname" class="form-control form-control-user" placeholder="User Name">
                    </div>
                    <div class="col-sm-6">
                        <input type="text" id="Phone" class="form-control form-control-user" placeholder="Phone Number">
                    </div>
                </div>
                <div class="form-group">
                    <input type="email" id="Email" class="form-control form-control-user" placeholder="Email Address">
                </div>
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="password" id="Pass" class="form-control form-control-user" placeholder="Password">
                    </div>
                    <div class="col-sm-6">
                        <input type="password" id="confirmPass" class="form-control form-control-user" placeholder="Repeat Password">
                    </div>
                </div>
                @*<a href="#" onclick="Register();" class="btn btn-primary btn-user btn-block">
                    Register Account
                </a>*@
                <button id="register" class="btn btn-primary btn-user btn-block" onclick="Register();">Register</button>
            <hr>
            <div class="text-center">
                <a class="small" href="forgot-password.html">Forgot Password?</a>
            </div>
            <div class="text-center">
                <a class="small" href="/login">Already have an account? Login!</a>
            </div>
        </div>
    </div>
</div>
@section scriptRegis{
    <script src="~/js/Script/AuthScript.js"></script>
}
